    <template id="custom_headers" inherit_id="website.snippet_options">
        <xpath
                expr="//div/we-select[@data-variable='header-template']"
                position="inside"
        >
            <we-button
                    title="Custom Header"
                    data-name="header_custom_opt"
                    data-customize-website-views="theme_maintenance.template_header_custom"
                    data-customize-website-variable="'custom_header'"
                    data-img="/website/static/src/img/snippets_options/header_template_search.svg"
            />
        </xpath>
    </template>
