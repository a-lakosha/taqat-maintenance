    <template
            id="template_header_custom"
            inherit_id="website.layout"
            active="False"
    >
        <xpath expr="//header//nav" position="replace">
            <t t-call="website.navbar">
                <t t-set="_navbar_classes" t-valuef="d-none d-lg-block shadow-sm px-0"/>
                <div id="o_main_nav" class="o_main_nav">
                    <div class="container">
                        <div class="d-flex justify-content-between flex-wrap align-items-center py-3">
                            <div class="d-flex order-1   align-items-center">
                                <!-- Brand -->
                                <div>
                                    <t t-call="website.placeholder_header_brand">
                                        <t t-set="_link_class" t-valuef="mx-auto mw-100"/>
                                    </t>
                                </div>
                                <!-- Language Selector -->
                                <div>
                                    <t t-call="website.placeholder_header_language_selector">
                                        <t t-set="_txt_class" t-valuef="small"/>
                                        <t t-set="_item_class" t-valuef="list-group"/>
                                        <t
                                                t-set="_btn_class"
                                                t-valuef="rounded-pill py-1 text-reset"
                                        />
                                        <t t-set="_flag_class" t-valuef="m-2"/>
                                        <t
                                                t-set="_dropdown_menu_class"
                                                t-valuef="dropdown-menu-end"
                                        />
                                    </t>
                                </div>
                                <span>
                                    <!-- User Dropdown -->
                                    <t t-call="portal.user_dropdown">
                                        <t t-set="_icon" t-value="true"/>
                                        <t t-set="_user_name" t-value="true"/>
                                        <t t-set="_user_name_class" t-valuef="me-auto small"/>
                                        <t t-set="_link_class"
                                           t-valuef="btn-outline-secondary text-white d-flex align-items-center border-0 px-2"/>
                                        <t t-set="_icon_class" t-valuef="me-2 text-white"/>
                                        <t t-set="_item_class" t-valuef="dropdown text-white dropup"/>
                                        <t t-set="_dropdown_menu_class" t-valuef="w-100 text-white"/>
                                    </t>
                                </span>
                            </div>
                            <ul class="o_header_search_right_col order-3 mt-3 mt-xxl-0 w-100 w-xxl-auto order-xxl-2  m-auto mx-0 px-0">
                                <!-- Search bar -->
                                <t
                                        t-call="website.placeholder_header_search_box"
                                        t-nocache="The searchbox should not cache previous searches."
                                >
                                    <t
                                            t-set="_input_classes"
                                            t-valuef="rounded-start-pill input_search ps-3 text-bg-light"
                                    />
                                    <t
                                            t-set="_submit_classes"
                                            t-valuef="rounded-end-pill pe-3   "
                                    />
                                </t>
                            </ul>
                            <div class="order-2 order-xxl-3">
                                <t t-call="theme_maintenance.template_header_text">
                                    <t t-set="_txt_elt_content" t-valuef="sentence"/>
                                    <t
                                            t-set="_div_class"
                                            t-valuef="d-flex align-items-center text-white h-100 border-end p-2 text-muted o_border_contrast"
                                    />
                                </t>
                            </div>
                        </div>
                    </div>
                    <nav style=" border-top: 1px solid rgba(255, 255, 255, 0.6); border-bottom: 1px solid rgba(255, 255, 255, 0.6);"
                         class="py-3">
                        <div class="container">
                            <div class="d-flex justify-content-center">
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-valuef="nav-item"/>
                                        <t
                                                t-set="link_class"
                                                t-valuef="nav-link text-normal text-white-50"
                                        />
                                    </t>
                                </t>
                            </div>
                        </div>
                    </nav>
                </div>
            </t>
            <t t-call="website.template_header_mobile">
                <t t-set="_txt_elt_content" t-valuef="sentence"/>
            </t>
        </xpath>
    </template>
    <template
            id="template_header_theme_maintenance"
            name="Template Header Mobile"
            inherit_id="website.template_header_vertical"
    >
    </template>
    <template id="inherit_header_mobile" inherit_id="website.template_header_mobile">
        <xpath expr="//div[@id='top_menu_collapse_mobile']" position="attributes">
            <attribute name="t-attf-class" add="bg-dark" separator=" "/>
        </xpath>
        <xpath expr="//button[@data-bs-dismiss='offcanvas']" position="attributes">
            <attribute name="class" add="bg-white rounded-5" separator=" "/>
        </xpath>
        <xpath expr="//t[@t-call='website.placeholder_header_text_element']" position="replace">
            <t t-call="website.placeholder_header_text_element">
                <t t-set="_div_class" t-valuef="mt-2 border-top pt-2 text-white o_border_contrast"/>
            </t>
        </xpath>
        <xpath expr="//t[@t-call='website.placeholder_header_search_box']" position="replace">
            <t t-call="website.placeholder_header_search_box"
               t-nocache="The searchbox should not cache previous searches.">
                <t t-set="_classes" t-valuef="mb-3"/>
                <t t-set="_input_classes" t-valuef="rounded-pill text-bg-light ps-3"/>
                <t t-set="_submit_classes" t-valuef="rounded-end-pill bg-o-color-3 pe-3 d-none"/>
                <t t-set="limit" t-valuef="0"/>
            </t>
        </xpath>
        <xpath expr="//t[@t-call='website.placeholder_header_language_selector']" position="replace">
            <t t-call="website.placeholder_header_language_selector">
                <t t-set="_btn_class" t-valuef="btn-outline-secondary text-white d-flex align-items-center w-100 px-2"/>
                <t t-set="_txt_class" t-valuef="me-auto  small"/>
                <t t-set="_flag_class" t-valuef="me-2"/>
                <t t-set="_div_classes" t-valuef="dropup"/>
                <t t-set="_dropdown_menu_class" t-valuef="w-100 text-dark"/>
            </t>
        </xpath>
        <xpath expr="//span[hasclass('navbar-toggler-icon')]" position="replace">
            <i class="bi bi-blockquote-left text-white  fs-2"></i>
        </xpath>
    </template>
</odoo>
