<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="aboutus_template" name="About Us">
            <t t-set="additional_title" t-valuef="About Us"/>
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure main__content-area-aboutus">
                    <section class="hero_section">
                        <div class="hero">
                            <!-- Decorative images -->
                            <div class="hero__media" aria-hidden="true">
                                <img src="/theme_maintenance/static/src/imgs/y_about/hero_about1.png" alt="img1"/>
                                <img src="/theme_maintenance/static/src/imgs/y_about/hero_about4.png" alt="img2"/>
                                <img src="/theme_maintenance/static/src/imgs/y_about/hero_about2 .png" alt="img3"
                                     class="end-50"/>
                                <img src="/theme_maintenance/static/src/imgs/y_about/hero_about3.png" alt="img4"/>
                            </div>

                            <!-- Text content -->
                            <div class="hero__text text-white text-center container"
                                 style="max-width:700px">
                                <div class="d-flex flex-column gap-lg-4 gap-3">
                                    <h1 class="display-1">Pioneers of Facility Management in Qatar</h1>
                                    <h4>Drawing on proven expertise and innovative vision, we provide extraordinary
                                        facility
                                        management solutions founded on quality, sustainability, and creative
                                        transformation.
                                        As leaders in Qatar’s facility management industry, we harmonize human expertise
                                        and
                                        advanced technology to shape secure, high-performing, and future-focused
                                        environments that foster success for organizations and individuals..
                                    </h4>
                                    <div class="d-flex flex-column flex-lg-row align-content-center justify-content-center gap-2">
                                        <a t-attf-href="/service" class="btn btn-primary text-dark">Explore our services
                                            <i class="fa fa-long-arrow-right ps-3"/>
                                        </a>
                                        <a t-attf-href="/contact" class="btn btn-primary text-dark">Contact us</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="pb72 pt72">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="row">


                                        <div class="col-lg-6">
                                            <h4 class="text-primary">Our Vision</h4>
                                            <h2>To be the first choice in maintenance</h2>
                                        </div>
                                        <h4 class="col-lg-6">To lead the facility management industry in Qatar, and
                                            become the top choice
                                            for
                                            Qatari clients by delivering creative and sustainable solutions that boost
                                            facilities performance, while adhering to the highest international
                                            standards
                                            and fostering continuous innovation.
                                        </h4>
                                    </div>
                                </div>
                                <div class="col-lg-6 ps-lg-4">
                                    <div class="row">


                                        <div class="col-lg-6">
                                            <h4 class="text-primary">Our Mission</h4>
                                            <h2>Keeping every property safe and efficient</h2>
                                        </div>
                                        <h4 class="col-lg-6">We are committed to providing integrated facility
                                            management services through innovative experts and intelligent technology. 
                                            With passion, we strive to create safe, efficient, and sustainable
                                            facilities to meet our clients’ needs and exceed their expectations.
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-nowrap overflow-x-auto gap-4 justify-content-start about-mission">
                                <img src="/theme_maintenance/static/src/imgs/y_about/person-working.png"
                                     alt="working-man"/>
                                <img src="/theme_maintenance/static/src/imgs/y_about/bearded-gardener.png"
                                     alt="gardner"/>
                                <img src="/theme_maintenance/static/src/imgs/y_about/manager-supervisor.png"
                                     alt="supervisor"/>
                                <img src="/theme_maintenance/static/src/imgs/y_about/unrecognizable-man.png" alt="man"/>
                                <img src="/theme_maintenance/static/src/imgs/y_about/team-leader.png"
                                     alt="team-leader"/>
                            </div>
                        </div>
                    </section>

                </div>
            </t>
        </template>

        <record id="aboutus_page" model="theme.website.page">
            <field name="view_id" ref="aboutus_template"/>
            <field name="is_published" eval="True"/>
            <field name="url">/aboutus</field>
        </record>
        <!-- Case 1: Create a new navbar menu -->
        <record id="aboutus_menu" model="theme.website.menu">
            <field name="name">About Us</field>
            <field name="url">/aboutus</field>
            <field name="sequence" type="int">20</field>
        </record>
    </data>
</odoo>