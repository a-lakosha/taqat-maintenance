<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template name="Contact Us" id="contact_us_page" inherit_id="website.contactus"
                  active="True">
            <xpath expr="//div[@id='wrap']" position="replace">
                <t t-set="service_ids"
                   t-value="request.env['website.service'].search([])"/>
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="hero_section pt48">
                        <div class="hero" style="margin-bottom:600px ; height:500px;">
                            <div class="container d-flex justify-content-center ">
                                <div class="d-flex flex-column align-items-center justify-content-center gap-3 gap-lg-4 text-white position-relative"
                                     style="max-width:800px;">
                                    <h1 class="display-1 text-center">Contact Us… Get the perfect service your facility
                                        deserves
                                    </h1>
                                    <h4 class="text-center">Whether you need urgent maintenance or seek a
                                        long-term partnership to keep your facility in optimal condition, we are here to
                                        listen, answer all your inquiries, and provide you with inspiring solutions with
                                        maximum speed and efficiency. Contact us now and let’s plan for keeping your
                                        property secure, stable, and ready for the future.
                                    </h4>
                                    <div class="contact_us-inner s_website_form position-absolute top-100 mb-lg-5 mb-3">
                                        <div class="container py-4">
                                            <form action="/website/form/" method="post" enctype="multipart/form-data"
                                                  class="o_mark_required form_shadow bg-white p-4 rounded-5"
                                                  data-mark="*"
                                                  data-pre-fill="true"
                                                  data-model_name="crm.lead"
                                                  data-success-mode="message" data-success-page="/contactus-thank-you"
                                                  style="max-width:800px;"
                                            >
                                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                                    <h1 class="mb-lg-4 mb-3">Contact us</h1>


                                                    <div data-name="Field"
                                                         class="s_website_form_field mb-3 col-12 s_website_form_required"
                                                         data-type="char" data-translated-name="Field">
                                                        <label class="s_website_form_label" style="width: 200px"
                                                               for="of9qm8713zwa">
                                                            <span class="s_website_form_label_content fw-bold">Your
                                                                Name
                                                            </span>
                                                        </label>
                                                        <input class="form-control s_website_form_input" type="text"
                                                               name="contact_name"
                                                               required="1" placeholder="" id="of9qm8713zwa"
                                                               data-fill-with="name"/>
                                                    </div>
                                                    <div data-name="Field" class="s_website_form_field mb-3 col-12"
                                                         data-type="tel"
                                                         data-translated-name="Field">
                                                        <label class="s_website_form_label" style="width: 200px"
                                                               for="ox53z80k05p">
                                                            <span class="s_website_form_label_content fw-bold">Phone
                                                                Number
                                                            </span>
                                                        </label>
                                                        <input class="form-control s_website_form_input" type="tel"
                                                               name="phone"
                                                               placeholder="" id="ox53z80k05p" data-fill-with="phone"/>
                                                    </div>
                                                    <div data-name="Field"
                                                         class="s_website_form_field mb-3 col-12 s_website_form_required"
                                                         data-type="email" data-translated-name="Field">
                                                        <label class="s_website_form_label" style="width: 200px"
                                                               for="o64ap46w15on">
                                                            <span class="s_website_form_label_content fw-bold">Your
                                                                Email
                                                            </span>
                                                        </label>
                                                        <input class="form-control s_website_form_input" type="email"
                                                               name="email_from"
                                                               required="1" placeholder="" id="o64ap46w15on"
                                                               data-fill-with="email"/>
                                                    </div>

                                                    <div data-name="Field"
                                                         class="s_website_form_field mb-3 col-12 s_website_form_model_required"
                                                         data-type="char" data-translated-name="Field">
                                                        <label class="s_website_form_label" style="width: 200px"
                                                               for="olijz3foppl">
                                                            <span class="s_website_form_label_content fw-bold">Service
                                                                type
                                                            </span>
                                                        </label>
                                                        <select class="form-select s_website_form_input"
                                                                name="name"
                                                                id="service_type_id"
                                                                required="required">

                                                            <!-- Placeholder (default) -->
                                                            <option t-if="not service" value="" selected="selected"
                                                                    disabled="disabled">Choose a
                                                                service
                                                            </option>

                                                            <!-- Real options -->
                                                            <t t-foreach="service_ids" t-as="s">
                                                                <option t-attf-value="Requests for {{s.name}}"
                                                                        t-att-selected="selected if service and service.id == s.id else none">
                                                                    <t t-out="s.name"/>
                                                                </option>
                                                            </t>
                                                        </select>

                                                        <!--                                        <input class="form-control s_website_form_input" type="text" name="name"-->
                                                        <!--                                               required="" placeholder="" id="olijz3foppl"/>-->
                                                    </div>
                                                    <div data-name="Field"
                                                         class="s_website_form_field mb-3 col-12 s_website_form_required"
                                                         data-type="text" data-translated-name="Field">
                                                        <label class="s_website_form_label" style="width: 200px"
                                                               for="oyzuz6xkk6ld">
                                                            <span class="s_website_form_label_content fw-bold">Your
                                                                Question
                                                            </span>
                                                        </label>
                                                        <textarea class="form-control s_website_form_input"
                                                                  name="description"
                                                                  placeholder="" id="oyzuz6xkk6ld" rows="3"/>
                                                    </div>
                                                    <div data-name="Field"
                                                         class="s_website_form_field mb-3 col-12 s_website_form_dnone">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label"
                                                                   style="width: 200px">
                                                                <span class="s_website_form_label_content"/>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input type="hidden"
                                                                       class="form-control s_website_form_input"
                                                                       name="team_id" value="1"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mb-0 py-2 col-12 s_website_form_submit"
                                                         data-name="Submit Button">
                                                        <div style="width: 200px;" class="s_website_form_label"/>
                                                        <a href="#" role="button"
                                                           class="btn btn-primary s_website_form_send o_default_snippet_text d-flex justify-content-center align-items-center text-dark">
                                                            Send
                                                            <i class="bi bi-arrow-right ms-lg-3 ms-1"/>
                                                        </a>
                                                        <span id="s_website_form_result"/>
                                                    </div>
                                                </div>
                                            </form>
                                            <div class="s_website_form_end_message d-none">
                                                <div class="oe_structure">
                                                    <section
                                                            class="s_text_block pt64 pb64 o_colored_level o_cc text-light"
                                                            data-snippet="s_text_block">
                                                        <div class="container">
                                                            <h2 class="text-center">
                                                                <span class="fa fa-check-circle"/>
                                                                Thank You For Your Feedback
                                                            </h2>
                                                            <p class="text-center">Our team will message you back as
                                                                soon as possible.In
                                                                the meantime we invite you to visit our <a href="/">
                                                                    website</a>.
                                                            </p>
                                                        </div>
                                                    </section>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>

                    </section>
                    <section class=" pt120 pb120 dark-bg">
                        <div class="container">
                            <div class="row justify-content-between text-white">
                                <div class="col-lg-4">
                                    <h4 class="text-primary">Get in Touch</h4>
                                    <h2 class="mb-3">Choose the service and contact us</h2>
                                    <h4 class="mb-lg-0 mb-5 text-500">
                                        Whether by phone, email, or social media, our team is ready to answer all your
                                        inquires quickly.
                                    </h4>
                                </div>
                                <div class="col-lg-7">
                                    <div class="row gap-4 gap-lg-0">
                                        <div class="col-lg-4 d-flex flex-lg-column gap-2 gap-lg-4">
                                            <span class="icon-wrapper d-flex align-items-center w-fit h-fit py-1 px-2 justify-content-center bg-primary rounded-2 ">
                                                <i class="bi bi-geo-alt-fill fs-3 "/>
                                            </span>
                                            <div>

                                                <h3>Head Office</h3>
                                                <h6 class="mb-lg-4 line-clamp-3 text-500">Visit us at our office</h6>
                                                <h6>8th Floor, Al Khair Tower, Street 901, Al Sadd - Doha- Qatar</h6>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 d-flex flex-lg-column gap-2 gap-lg-4">
                                            <span class="icon-wrapper w-fit h-fit d-flex align-items-center py-1 px-2 justify-content-center bg-primary rounded-2 ">
                                                <i class="bi bi-telephone-fill fs-3"/>
                                            </span>
                                            <div>

                                                <h3>Phone</h3>
                                                <h6 class="mb-lg-4 line-clamp-3 text-500">We are available Sunday
                                                    through
                                                    Thursday from 8 a.m.
                                                    to 5 p.m.
                                                </h6>
                                                <a href="tel:+97444249494" class="h6 text-light">+97444249494</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 d-flex flex-lg-column gap-2 gap-lg-4">
                                            <span class="icon-wrapper w-fit h-fit    d-flex align-items-center py-1 px-2 justify-content-center bg-primary rounded-2 ">
                                                <i class="bi bi-envelope-fill fs-3"/>
                                            </span>
                                            <div>

                                                <h3>Email</h3>
                                                <h6 class="mb-lg-4 line-clamp-3 text-500">We will respond within one
                                                    business
                                                    day
                                                </h6>
                                                <a href="mailto:ex.maintenance@taqat.com" class="h6 text-light">
                                                    ex.maintenance@taqat.com
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>

                    </section>
                    <section class="pt72 pb72">
                        <div class="container text-center  pt-lg-4 pb-lg-5">

                            <div class="row justify-content-center mb-5">
                                <div class="col-lg-10 col-xl-8">
                                    <h2 class="mb-3">Your questions... Here's what you need to know</h2>
                                    <h4 class="text-muted">
                                        Whether you're a new client or a long-term partner, we know you have questions.
                                        Here we answer the most common queries to make your experience with Taqat
                                        Property Maintenance easier.
                                    </h4>
                                </div>
                            </div>

                            <div class="row justify-content-center g-0 pb-lg-4">
                                <div class="col-lg-10 col-xl-8">

                                    <!-- Item -->
                                    <div class="pb-5 pt-4 border-top border-bottom border-1 border-primary">
                                        <h3 class="mb-2">Does Taqat for Facility Management provide emergency or
                                            quick-response services?
                                        </h3>
                                        <h6 class="mb-0 text-muted small">
                                            Absolutely… Our technical teams are on standby day and night, ensuring a
                                            rapid response within 60 minutes in our coverage areas.
                                        </h6>
                                    </div>

                                    <div class="pb-5 pt-4 border-top border-bottom border-1 border-primary">
                                        <h3 class="mb-2">How does Taqat for Facility Management maintain high service
                                            quality?
                                        </h3>
                                        <h6 class="mb-0 text-muted">By deploying expert teams, using advanced systems,
                                            implementing scheduled maintenance plans, and conducting effective
                                            performance reviews.
                                        </h6>
                                    </div>

                                    <div class="pb-5 pt-4 border-top border-bottom border-1 border-primary">
                                        <h3 class="mb-2">Do your services include both internal and external
                                            maintenance?
                                        </h3>
                                        <h6 class="mb-0 text-muted">Yes, our services include electrical and mechanical
                                            maintenance, plumbing, elevators, fire systems maintenance, as well as
                                            cleaning and landscaping.
                                        </h6>
                                    </div>

                                    <div class="pb-5 pt-4 border-top border-bottom border-1 border-primary">
                                        <h3 class=" mb-2">Does Taqat for Facility Management provide regular reports to
                                            clients?
                                        </h3>
                                        <h6 class="mb-0 text-muted">Yes, our clients receive comprehensive reports on
                                            performance, maintenance processes, and operational notes regularly.
                                        </h6>
                                    </div>

                                    <div class="pb-5 pt-4 ">
                                        <h3 class=" mb-2">Can facility management services be contracted on a partial
                                            basis?
                                        </h3>
                                        <h6 class="mb-0 text-muted">Yes, our clients can select specific services
                                            without subscribing to the full package, based on their facility’s
                                            requirements.
                                        </h6>
                                    </div>
                                    <div class="pb-5 pt-4 ">
                                        <h3 class=" mb-2">How can I contact your team?
                                        </h3>
                                        <h6 class="mb-0 text-muted">By phone, email, or through the contact form
                                            available on the website.
                                        </h6>
                                    </div>


                                </div>
                            </div>

                        </div>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</odoo>