                                            <t t-set="full_stars" t-value="int(float(review.rating))"/>
                                            <t t-set="half_star" t-value="(float(review.rating) - full_stars) >= 0.5"/>

                                            <!-- Empty stars calculation -->
                                            <t t-set="empty_stars" t-value="5 - full_stars - (1 if half_star else 0)"/>

                                            <!-- Full stars -->
                                            <t t-foreach="range(full_stars)" t-as="star">
                                                <i class="fa fa-star"/>
                                            </t>

                                            <!-- Half star -->
                                            <t t-if="half_star">
                                                <i class="fa fa-star-half-o"/>
                                            </t>

                                            <!-- Empty stars -->
                                            <t t-foreach="range(empty_stars)" t-as="star">
                                                <i class="fa fa-star-o"/>
                                            </t>
                                        </div>
                                        <span class="fw-bold" t-out="review.rating"/>
                                    </div>


