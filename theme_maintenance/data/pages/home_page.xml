<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template name="Taqat Maintenance Home" id="maintenance_home_page" inherit_id="website.homepage" active="True">

            <xpath expr="//div[@id='wrap']" position="replace">
                <t t-set="additional_title" t-valuef="Maintenance Home"/>
                <t t-set="service_type_ids"
                   t-value="request.env['website.service.type'].search([])"/>
                <t t-set="latest_posts"
                   t-value="request.env['blog.post'].search([], order='create_date desc', limit=7)"/>
                <t t-set="testimonial_ids"
                   t-value="request.env['testimonials.model'].search([], limit=7)"/>

                <div id="wrap" class="oe_structure oe_empty">
                    <section class="pb72 hero_section text-white">
                        <div class="hero_section-inner">
                            <div class="container">
                                <div class="row">
                                    <!-- Text Column -->
                                    <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column text-center text-md-start gap-lg-4 hero-txt o_animate o_anim_fade_in o_anim_from_left py-lg-5 py-3">
                                        <h1 class="display-1 fw-bold pe-lg-4">Facility Management at Global Standards
                                        </h1>
                                        <h4 class="fw-normal pe-lg-4" style="line-height: 28px;">
                                            We deliver interactive facility management services, from preventive
                                            facility management services, repairs, and renovations to operations, safety
                                            and security management, cleaning services, and complaint handling by
                                            experts and powered by advanced technologies. We ensure exceptional
                                            performance, operational efficiency, and user comfort through strict
                                            adherence to the international standards. Taqat for Facility Management…
                                            Where Quality, Safety, and Sustainability are integrated Together.
                                        </h4>
                                        <div class="d-flex justify-content-center justify-content-lg-start gap-2 gap-lg-3 my-3 ">
                                            <a t-attf-href="/services"
                                               class="btn btn-primary text-dark d-flex align-items-center justify-content-center p-2 ">
                                                Explore our services
                                                <i class="bi bi-arrow-right ms-lg-3 ms-1"/>


                                            </a>
                                            <a t-attf-href="/contactus" class="btn btn-primary text-dark p-2  ">
                                                Get in Touch
                                            </a>
                                        </div>
                                    </div>

                                    <!-- Image Column -->
                                    <div class="col-lg-6 order-1 order-lg-2 d-flex gap-1 gap-lg-4 o_animate o_anim_fade_in">
                                        <img src="/theme_maintenance/static/src/imgs/y_home/hero.png" alt="Hero1"
                                             class="w-100"/>
                                    </div>
                                </div>

                                <!-- Second Row -->
                                <div class="row pt32">
                                    <div class="col-lg-6 second-hero-row o_animate o_anim_fade_in">
                                        <img src="/theme_maintenance/static/src/imgs/y_home/bulider.png"
                                             alt="service_bulider" class="w-100 h-100"/>
                                    </div>
                                    <div class="col-lg-6 second-hero-row o_animate o_anim_fade_in o_anim_from_bottom">
                                        <h4 class="mb-lg-3">Why Choose Taqat for Facilities Management?</h4>
                                        <h2 class="trusted-heading fw-semibold">Trusted Expertise… Customized Solutions…
                                            24/7 Support
                                        </h2>
                                        <ul class="list-unstyled d-flex flex-column gap-2 gap-lg-4">
                                            <li>
                                                <h3 class="fw-semibold mb16">Proven experience in facility management
                                                    services
                                                </h3>
                                                <h4 class="fw-normal">An exceptional track record in operating and
                                                    maintaining facilities to the global standards.
                                                </h4>
                                            </li>
                                            <li>
                                                <h3 class="fw-semibold mb16">Flexible plans customized to both
                                                    commercial and
                                                    residential needs
                                                </h3>
                                                <h4 class="fw-normal">Bespoke facility management services designed for
                                                    efficiency, reliability, and cost-effectiveness.
                                                </h4>
                                            </li>
                                            <li>
                                                <h3 class="fw-semibold mb16">24/7 Support</h3>
                                                <h4 class="fw-normal">Highly trained professionals ready to respond
                                                    promptly and deliver with precision at any time.
                                                </h4>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="pt72 pb72 technical_services">
                        <div class="container">
                            <t t-foreach="service_type_ids" t-as="service_type">
                                <div class="my-lg-5 my-3 pb-3">
                                    <h1 class="display-1 mb-lg-3 fw-bold" t-field="service_type.name"/>
                                    <h4 class="fw-normal" t-field="service_type.description"/>
                                </div>
                                <div class="row cards-container">
                                    <t t-foreach="service_type.service_ids" t-as="service">
                                        <div class="col-lg-6 col-xl-3 cards-container-item mb-5">
                                            <a t-attf-href="/service/{{slug(service)}}" class="d-block w-100">
                                                <div class="position-relative span-div w-100"
                                                     t-attf-style="background-image:url(/web/image/website.service/{{service.id}}/image_512)">
                                                    <img src="/theme_maintenance/static/src/imgs/y_home/Frame.svg"
                                                         class="position-absolute"/>
                                                    <span class="flip-badge text-white fw-bold pe-4 ps-5 py-3">
                                                        <span class="front bg-primary rounded-pill d-flex align-items-center justify-content-center position-absolute"
                                                              t-out="'%02d.' % (service_index + 1)"/>
                                                        <span class="back bg-primary rounded-pill d-flex align-items-center justify-content-center position-absolute">
                                                            <i t-attf-class="bi text-white {{service.icon}}"/>
                                                        </span>
                                                    </span>
                                                </div>
                                                <div class="bg-light d-flex text-dark p-2 mt-2 rounded-5 justify-content-center">
                                                    <h5 class="fw-semibold" t-field="service.tec_name"/>
                                                </div>
                                            </a>
                                        </div>
                                    </t>
                                    <!-- Contact Card -->
                                    <div class="col-lg-6 col-xl-3 d-flex flex-column align-items-center justify-content-start cards-container-item mb-5">
                                        <a href="/contactus" class="w-100" style="aspect-ratio:3/2;">
                                            <div class="bg-dark position-relative contact-bg p-4 h-100 d-flex justify-content-center align-items-center text-center">
                                                <h3 class="text-white fw-semibold">Contact us now and get the best
                                                    quote
                                                </h3>
                                            </div>
                                            <div class="bg-light d-flex text-dark p-2 mt-2 rounded-5 justify-content-center w-100">
                                                <h5 class="fw-semibold">Contact us</h5>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </section>

