<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security rule for public and portal users: only see published services -->
        <record model="ir.rule" id="website_service_public">
            <field name="name">Service: public: published only</field>
            <field name="model_id" ref="model_website_service"/>
            <field name="domain_force">[('website_published', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
        </record>
    </data>
</odoo>