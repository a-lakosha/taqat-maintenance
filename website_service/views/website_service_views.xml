<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_website_service_tree" model="ir.ui.view">
        <field name="name">website.service.tree</field>
        <field name="model">website.service</field>
        <field name="arch" type="xml">
            <tree string="Services">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="type_id"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="website_published" string="Published"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_website_service_form" model="ir.ui.view">
        <field name="name">website.service.form</field>
        <field name="model">website.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <widget name="web_ribbon" title="Published" bg_color="bg-success" attrs="{'invisible': [('website_published', '=', False)]}"/>
                    <widget name="web_ribbon" title="Not Published" bg_color="bg-danger" attrs="{'invisible': [('website_published', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" string="Service Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Office Cleaning"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_id"/>
                            <field name="sequence"/>
                            <field name="website_published"/>
                            <field name="website_id" groups="website.group_multi_website"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description" placeholder="Brief description..."/>
                            </group>
                            <separator string="Website Content"/>
                            <field name="website_description" placeholder="Use the HTML editor to design your service page..."/>
                        </page>
                        <page string="SEO" name="seo">
                            <group>
                                <field name="website_meta_title" string="Meta Title"/>
                                <field name="website_meta_description" string="Meta Description"/>
                                <field name="website_meta_keywords" string="Meta Keywords"/>
                                <field name="website_meta_og_img" string="OG Image" widget="image"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_website_service_kanban" model="ir.ui.view">
        <field name="name">website.service.kanban</field>
        <field name="model">website.service</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="type_id"/>
                <field name="tag_ids"/>
                <field name="image_1920"/>
                <field name="website_published"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('website.service', 'image_128', record.id.raw_value)" alt="Service"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <span class="badge badge-pill badge-secondary" t-if="record.type_id.raw_value">
                                        <field name="type_id"/>
                                    </span>
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="mt-2">
                                    <span t-if="record.website_published.raw_value" class="badge badge-success">Published</span>
                                    <span t-else="" class="badge badge-danger">Not Published</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_website_service_search" model="ir.ui.view">
        <field name="name">website.service.search</field>
        <field name="model">website.service</field>
        <field name="arch" type="xml">
            <search string="Search Services">
                <field name="name"/>
                <field name="type_id"/>
                <field name="tag_ids"/>
                <filter string="Published" name="published" domain="[('website_published', '=', True)]"/>
                <filter string="Not Published" name="not_published" domain="[('website_published', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_by_type" context="{'group_by': 'type_id'}"/>
                    <filter string="Published" name="group_by_published" context="{'group_by': 'website_published'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_website_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">website.service</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service
            </p>
            <p>
                Services will be displayed on your website.
            </p>
        </field>
    </record>
</odoo>