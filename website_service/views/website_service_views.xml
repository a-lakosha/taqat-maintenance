<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- add new for Website Projects -->
    <record id="website_service_view_form_add" model="ir.ui.view">
        <field name="name">website.service.view.form.add</field>
        <field name="model">website.service</field>
        <field name="arch" type="xml">
            <form js_class="website_new_content_form">
                <group>
                    <field name="website_url" invisible="1"/>
                    <field name="name" placeholder="Project Title"/>
                    <field name="type_id" string="Select the Type"/>
                </group>
            </form>
        </field>
    </record>
    <record id="website_service_action_add" model="ir.actions.act_window">
        <field name="name">New Project</field>
        <field name="res_model">website.service</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="website_service_view_form_add"/>
    </record>

    <!-- Website Pages List Tree View -->
    <record id="view_website_service_pages_list" model="ir.ui.view">
        <field name="name">website.service.pages.list</field>
        <field name="model">website.service</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <tree js_class="website_pages_list" type="object" action="open_website_url" multi_edit="1">
                <field name="website_published" column_invisible="True"/>
                <field name="name"/>
                <field name="website_url"/>
                <field name="create_uid" optional="hide"/>
                <field name="write_uid" optional="hide"/>
                <field name="write_date" optional="hide"/>
                <field name="is_seo_optimized"/>
                <field name="website_published"/>
                <field name="website_id" groups="website.group_multi_website"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_website_service_form" model="ir.ui.view">
        <field name="name">website.service.form</field>
        <field name="model">website.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="website_published" widget="website_redirect_button"/>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                    <div class="oe_title">
                        <label for="name" string="Service Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Office Cleaning"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="type_id"/>
                            <field name="sequence"/>
                            <field name="website_published"/>
                            <field name="website_id" groups="website.group_multi_website"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description" placeholder="Brief description..."/>
                            </group>
                            <separator string="Website Content"/>
                            <field name="website_description"
                                   placeholder="Use the HTML editor to design your service page..."/>
                        </page>
                        <page string="SEO" name="seo">
                            <group>
                                <field name="website_meta_title" string="Meta Title"/>
                                <field name="website_meta_description" string="Meta Description"/>
                                <field name="website_meta_keywords" string="Meta Keywords"/>
                                <field name="website_meta_og_img" string="OG Image" widget="image"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_website_service_kanban" model="ir.ui.view">
        <field name="name">website.service.kanban</field>
        <field name="model">website.service</field>
        <field name="arch" type="xml">
            <kanban js_class="website_pages_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="type_id"/>
                <field name="tag_ids"/>
                <field name="image_1920"/>
                <field name="website_published"/>
                <field name="website_url"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('website.service', 'image_128', record.id.raw_value)"
                                     alt="Service"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <span class="badge badge-pill badge-secondary" t-if="record.type_id.raw_value">
                                        <field name="type_id"/>
                                    </span>
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="mt-2">
                                    <span t-if="record.website_published.raw_value" class="badge badge-success">
                                        Published
                                    </span>
                                    <span t-else="" class="badge badge-danger">Not Published</span>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <button name="open_website_url" type="object"
                                                class="btn btn-sm btn-link p-0"
                                                title="View on Website">
                                            <i class="fa fa-globe"/>
                                            View
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_website_service_search" model="ir.ui.view">
        <field name="name">website.service.search</field>
        <field name="model">website.service</field>
        <field name="arch" type="xml">
            <search string="Search Services">
                <field name="name"/>
                <field name="type_id"/>
                <field name="tag_ids"/>
                <filter string="Published" name="published" domain="[('website_published', '=', True)]"/>
                <filter string="Not Published" name="not_published" domain="[('website_published', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_by_type" context="{'group_by': 'type_id'}"/>
                    <filter string="Published" name="group_by_published" context="{'group_by': 'website_published'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_website_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">website.service</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'create_action': 'website_service.website_service_action_add'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service
            </p>
            <p>
                Services will be displayed on your website.
            </p>
        </field>
    </record>
</odoo>