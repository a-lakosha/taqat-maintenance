<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_website_service_tag_tree" model="ir.ui.view">
        <field name="name">website.service.tag.tree</field>
        <field name="model">website.service.tag</field>
        <field name="arch" type="xml">
            <tree string="Service Tags">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="icon"/>
                <field name="color" widget="color_picker"/>
                <field name="service_count" string="Services"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_website_service_tag_form" model="ir.ui.view">
        <field name="name">website.service.tag.form</field>
        <field name="model">website.service.tag</field>
        <field name="arch" type="xml">
            <form string="Service Tag">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_website_service)d" type="action" class="oe_stat_button" icon="fa-list" context="{'search_default_tag_ids': active_id}">
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Tag Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Premium"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="icon" placeholder="e.g. fa fa-star or bi bi-star"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <separator string="Services"/>
                    <field name="service_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="type_id"/>
                            <field name="website_published"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_website_service_tag_search" model="ir.ui.view">
        <field name="name">website.service.tag.search</field>
        <field name="model">website.service.tag</field>
        <field name="arch" type="xml">
            <search string="Search Service Tags">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_website_service_tag" model="ir.actions.act_window">
        <field name="name">Service Tags</field>
        <field name="res_model">website.service.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create service tags
            </p>
            <p>
                Tags help categorize and filter services.
            </p>
        </field>
    </record>
</odoo>