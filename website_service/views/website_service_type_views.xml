<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_website_service_type_tree" model="ir.ui.view">
        <field name="name">website.service.type.tree</field>
        <field name="model">website.service.type</field>
        <field name="arch" type="xml">
            <tree string="Service Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="service_count" string="Services"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_website_service_type_form" model="ir.ui.view">
        <field name="name">website.service.type.form</field>
        <field name="model">website.service.type</field>
        <field name="arch" type="xml">
            <form string="Service Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_website_service)d" type="action" class="oe_stat_button" icon="fa-list" context="{'search_default_type_id': active_id}">
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Type Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Cleaning Services"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <separator string="Description"/>
                    <field name="description" placeholder="Type description..."/>
                    <separator string="Services"/>
                    <field name="service_ids" readonly="1">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="website_published"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_website_service_type_search" model="ir.ui.view">
        <field name="name">website.service.type.search</field>
        <field name="model">website.service.type</field>
        <field name="arch" type="xml">
            <search string="Search Service Types">
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_website_service_type" model="ir.actions.act_window">
        <field name="name">Service Types</field>
        <field name="res_model">website.service.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create service types
            </p>
            <p>
                Organize your services into different types.
            </p>
        </field>
    </record>
</odoo>